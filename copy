    <script>
        // è®¡ç®—ç¼–ç¨‹å¤©æ•°ï¼ˆä»2017å¹´å¼€å§‹ï¼‰
        function calculateDays() {
            const startDate = new Date('2017-01-01');
            const today = new Date();
            const diffTime = Math.abs(today - startDate);
            const diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24));
            document.getElementById('days-count').textContent = diffDays.toLocaleString();
        }

        // å¤åˆ¶é‚®ç®±
        function copyEmail() {
            const email = document.getElementById('email').textContent;
            navigator.clipboard.writeText(email).then(() => {
                const btn = document.querySelector('.copy-btn');
                const originalText = btn.querySelector('.copy-text').textContent;
                
                btn.classList.add('copied');
                btn.querySelector('.copy-text').textContent = 'å·²å¤åˆ¶ âœ“';
                
                showToast('é‚®ç®±å·²å¤åˆ¶åˆ°å‰ªè´´æ¿ï¼');
                
                setTimeout(() => {
                    btn.classList.remove('copied');
                    btn.querySelector('.copy-text').textContent = originalText;
                }, 2000);
            });
        }

        // åˆéŸ³æœªæ¥ç‚¹å‡»æ•ˆæœ
        function mikuClick() {
            const miku = document.querySelector('.miku-decoration');
            const notes = ['â™ª', 'â™«', 'â™¬', 'â™©'];
            
            // åˆ›å»º3ä¸ªéŸ³ç¬¦
            for (let i = 0; i < 3; i++) {
                setTimeout(() => {
                    const note = document.createElement('div');
                    note.className = 'music-note';
                    note.textContent = notes[Math.floor(Math.random() * notes.length)];
                    note.style.left = (miku.offsetLeft + 60) + 'px';
                    note.style.top = (miku.offsetTop + 20) + 'px';
                    note.style.color = ['#39C5BB', '#FFB3D9', '#B4E4FF'][Math.floor(Math.random() * 3)];
                    document.body.appendChild(note);
                    
                    setTimeout(() => note.remove(), 3000);
                }, i * 200);
            }
            
            showToast('Miku: ã“ã‚“ã«ã¡ã¯ï¼(ï¾‰â—•ãƒ®â—•)ï¾‰*:ï½¥ï¾Ÿâœ§');
        }

        // æ˜¾ç¤º Toast é€šçŸ¥
        function showToast(message) {
            const toast = document.getElementById('toast');
            toast.textContent = message;
            toast.classList.add('show');
            
            setTimeout(() => {
                toast.classList.remove('show');
            }, 3000);
        }

        // å³å°†æ¨å‡ºæç¤º
        function showComingSoon(event) {
            event.preventDefault();
            showToast('æ–‡ç« åŠŸèƒ½å³å°†ä¸Šçº¿ï¼Œæ•¬è¯·æœŸå¾…ï¼');
        }

        // é¡µé¢åŠ è½½å®Œæˆåæ‰§è¡Œ
        window.addEventListener('load', () => {
            calculateDays();
            
            // æ¬¢è¿æ¶ˆæ¯
            setTimeout(() => {
                showToast('æ¬¢è¿æ¥åˆ° Bryan çš„åšå®¢ï¼Ù©(â—•â€¿â—•ï½¡)Û¶');
            }, 1000);
        });

        // ç‚¹å‡»é‚®ç®±ä¹Ÿå¯ä»¥å¤åˆ¶
        document.getElementById('email').addEventListener('click', copyEmail);
        document.getElementById('email').style.cursor = 'pointer';
    </script>
